{
  "tailwindCSS.experimental.classRegex": [
    // cva / cx / clsx calls
    ["\\bcva\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
    ["\\bcx\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
    ["\\bclsx\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],

    // Also scan inside CVA option objects
    [
      "\\bvariants\\s*:\\s*\\{([\\s\\S]*?)\\}",
      "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"
    ],
    [
      "\\bcompoundVariants\\s*:\\s*\\[([\\s\\S]*?)\\]",
      "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"
    ],
    [
      "\\bdefaultVariants\\s*:\\s*\\{([\\s\\S]*?)\\}",
      "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"
    ]
  ]
}
